<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/gank_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gank_item_image"
            android:layout_width="120dp"
            android:layout_height="67.5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/gank_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/gank_item_image"
            android:padding="5dp"
            android:text="android title"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gank_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/gank_item_title"
            android:padding="5dp"
            android:text="2016.8.30"
            android:textColor="@color/blue_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gank_item_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gank_item_time"
            android:drawableLeft="@drawable/gank_who"
            android:drawablePadding="2dp"
            android:padding="5dp"
            android:text="who"
            android:textColor="@color/blue_grey"
            android:textSize="12sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>