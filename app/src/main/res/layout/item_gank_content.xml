<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/gank_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gank_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:text="android title"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gank_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gank_item_title"
            android:padding="5dp"
            android:text="2016.8.30"
            android:textColor="@color/blue_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gank_item_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/gank_item_title"
            android:drawableLeft="@drawable/gank_who"
            android:drawablePadding="2dp"
            android:padding="5dp"
            android:text="who"
            android:textColor="@color/blue_grey"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>