<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gank_title"
        android:layout_marginTop="4dp">

        <ImageView

            android:id="@+id/gank_content_iv"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/gank_type_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/gank_content_iv"
            android:padding="5dp"
            android:text="@string/gank_type_android"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gank_android_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gank_type_android"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/gank_content_iv"
            android:padding="5dp"
            android:text="android title  android title"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>