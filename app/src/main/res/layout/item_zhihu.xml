<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/item_zhihu_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">


        <!--<TextView-->
        <!--android:id="@+id/item_zhihu_date"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_below="@id/item_zhihu_date"-->
        <!--android:textSize="12sp" />-->

        <ImageView
            android:id="@+id/item_zhihu_image"
            android:layout_width="120dp"
            android:layout_height="67.5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/item_zhihu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/item_zhihu_image"
            android:layout_toStartOf="@id/item_zhihu_image"
            android:textSize="14sp"
            android:textStyle="bold"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>